<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:contentDescription="Shoes Logo" />

    <!-- Text thông báo -->
    <TextView
        android:id="@+id/txtSuccessMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Đặt hàng thành công\nHóa đơn của bạn đã được xác nhận"
        android:textSize="18sp"
        android:textColor="#803300"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:textStyle="bold" />

    <!-- Text Theo dõi đơn hàng -->
    <TextView
        android:id="@+id/txtFollowOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Theo dõi đơn hàng"
        android:textSize="16sp"
        android:textColor="#FF5722"
        android:gravity="center"
        android:textStyle="bold" />

    <!-- Button Tiếp tục mua sắm -->
    <Button
        android:id="@+id/btnContinueShopping"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF5722"
        android:text="Tiếp tục mua sắm"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center" />

</LinearLayout>
